@model BlogsViewModel
@{
    ViewData["Title"] = "Index";
}
<a class="btn btn-primary" asp-action="Add">Create</a>
<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Title</th>
            <th>Create Time</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Blog)
        {
            <tr>
                <td>@item.UserId</td>
                <td>@item.Title</td>
                <td>@item.CreateTime</td>
                <td>

                    <a asp-action="Detail" asp-route-id="@item.Id">Detail</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


