@model BlogViewModel
@{
    ViewData["Title"] = "Add";
}

<div class="row">
    <form asp-action="Add" method="post">

        <div class="form-group">
            <label asp-for="Blog.UserId" class="form-label"></label>
            <input type="text" asp-for="Blog.UserId" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Blog.Title" class="form-label"></label>
            <input type="text" asp-for="Blog.Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Blog.Content" class="form-label"></label>
            <input type="text" asp-for="Blog.Content" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Blog.Tags" class="form-label"></label>
            <input type="text" asp-for="Blog.Tags" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>


