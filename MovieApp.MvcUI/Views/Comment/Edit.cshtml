@model CommentViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Comment.Id" />
        <input type="hidden" asp-for="Comment.BlogId" />
        <input type="hidden" asp-for="Comment.UserId" />

        <div class="form-group">
            <label asp-for="Comment.Content" class="form-label"></label>
            <input type="text" asp-for="Comment.Content" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
        </div>
    </form>
</div>

