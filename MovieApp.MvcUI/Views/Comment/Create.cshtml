@model CommentViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <form asp-action="Edit" method="post">

        <div class="form-group">
            <label asp-for="Comment.UserId" class="form-label"></label>
            <input type="text" asp-for="Comment.UserId" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Comment.BlogId" class="form-label"></label>
            <input type="text" asp-for="Comment.BlogId" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Comment.Content" class="form-label"></label>
            <input type="text" asp-for="Comment.Content" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
        </div>
